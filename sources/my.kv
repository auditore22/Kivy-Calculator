#############################################################################################
<LogWindow>
    name: "log"
    username: user
    password: passw

    canvas:
        Color:
            rgb: .4,.4,.4
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'static/imgs/login.jpg'

    GridLayout:
        cols: 2
        spacing: 10
        size_hint: 0.8, 0.15
        pos_hint: {"x":0.12, "y":0.7}

        Label:
            text: "USERNAME  "
            font_name: "Glitch"
            color: 235/255, 146/255, 234/255, 1
            font_size: 0.8*self.height

        TextInput:
            id: user
            multiline: False
            font_name: "Arial"
            font_size: 0.48*self.height
            padding: [10,4,0,0]

        Label:
            text: "PASSWORD  "
            font_name: "Glitch"
            color: 235/255, 146/255, 234/255, 1
            font_size: 0.8*self.height

        TextInput:
            id: passw
            password: True
            multiline: False
            font_name: "Arial"
            font_size: 0.6*self.height if self.password == True else 0.48*self.height


    Button:
        text: "SUBMIT"
        color: 193/255, 21/255, 90/255, .9
        font_name: "Glitch"
        font_size: 0.4*self.height
        size_hint: 0.5, 0.2
        pos_hint: {"x":0.264, "y":0}
        background_normal: "static/imgs/log_btn.jpg"
        background_down: "static/imgs/log_btn_pressed.jpg"
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = "calculator" if root.submitBtn() else "log"
            user.text = ""
            passw.text = ""

    Button:
        text: "CREATE ACCOUNT"
        color: 235/255, 146/255, 234/255, 1
        font_name: "Glitch"
        font_size: 0.4*self.height
        size_hint: 0.5, 0.1
        pos_hint: {"x":0.25, "y":.85}
        background_color: 0,0,0,0
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = "create"

    Button:
        id: bt1pass
        text: "\u2690"
        font_name: "Symbola"
        color: 0/255, 0/255, 0/255, .9
        font_size: self.height * 0.8
        size_hint: 0.057, 0.057
        pos_hint: {"x":0.924253, "y":.7036}
        background_normal: "static/btns/btn_equal_normal.png"
        background_down: "static/btns/btn_equal_downl.png"
        on_press:
            passw.password = False
            self.text = "\u2691"
        on_release:
            passw.password = True
            self.text = "\u2690"
