            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False
                font_size: self.height * .5
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "USERNAME"
                font_name: "Glitch"
                color: 200/255, 73/255, 222/255, 1
                font_size: self.height * .7
            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: user
                multiline: False
                font_size: self.height * .5
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "PASSWORD"
                font_name: "Glitch"
                color: 200/255, 73/255, 222/255, 1
                font_size: self.height * .7
            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
